{
    "exclude": ["node_modules", "dist", "lib", "__tests__", "**/*.test*", "**/*.spec*", "**/*.test.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "noLib": false,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es5",
        "lib": [
            "es6",
            "es2017",
            "scripthost"
        ],
        "newLine": "LF",
        // "strictNullChecks": true,
        // "noImplicitReturns": true,
        // "noImplicitThis": true,
        // "noUnusedParameters": true,
        // "esModuleInterop": true,
        "outDir": "lib",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "typeRoots": [
        "/node_modules/@types",
        "/types"
    ],
} 