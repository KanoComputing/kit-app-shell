{
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "es6",
            "es2017",
            "scripthost"
        ],
        "newLine": "LF",
        // "strictNullChecks": true,
        // "noImplicitReturns": true,
        // "noImplicitThis": true,
        // "noUnusedParameters": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
}