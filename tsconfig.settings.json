{
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es5",
        "sourceMap": true,
        "lib": [
            "es6",
            "es2017",
            "scripthost"
        ],
        "newLine": "LF",
        // "strictNullChecks": true,
        // "noImplicitReturns": true,
        // "noImplicitThis": true,
        // "noUnusedParameters": true,
        // "esModuleInterop": true,
        "rootDir": ".",
        "outDir": "lib",
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "typeRoots": [
        "/node_modules/@types",
        "/types"
    ],
} 